#plan
	padding 30px 0
	overflow hidden
	.container
		padding 0
		width 100%
		max-width 1366px
		margin 0 auto
.days
	margin-bottom: 45px
.day
	position relative
	width 100%
	max-width 720px
	border 1px dashed #0a1938
	padding 30px 30px 30px 60px
	float left
	margin-bottom: -10px
	&:nth-of-type(2n)
		padding 30px 60px 30px 30px
		float: right
	&-img
		position: absolute
		&-1
		&-3
			top -16px
			right -450px
		&-2
		&-4
			top -16px
			left -430px
	&-title
		font-size: 18px
		font-family: RO
		margin: 0 0 30px 40px
#main
	padding 70px 0
	text-align: center
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center top -100px
	background-size: cover
.main-container
	border: 2px dashed #000
	padding 35px 25px
	position relative
.pre
	font-size: 23px
	font-family: OSB
	color #0c0b0c
.main-title
	font-size: 37px
	line-height: 37px
	font-family: RO
	color #fff
	text-transform: uppercase
	background-color: #FF6407
	padding 23px 10px
	box-shadow: 0 3px 7px 2px rgba(#000,.3)
	margin 23px 0 33px
	position relative
	width: 120%
	left -10%
.main-subtitle
	font-family: RO
	font-size: 23px
	text-transform: uppercase
	color #0e0e36
	span
		display: inline-block
		color #cf4b04
.main-date
	font-size: 18px
	color #0c0b0c
	font-family: RO
	margin 15px 0
	span
		display: inline-block
		font-size: 20px
	.span-date
		color #cf4b04
.main-author
	font-size: 18px
	font-family: RO
	color #1a1a1a
	span
		font-size: 22px
		color #0a1938
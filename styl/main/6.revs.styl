#revs
	padding 0 0 40px
#text-revs
	margin-bottom: 30px
.carousel-inner
	width 100%
	max-width 690px
	margin 0 auto
	background-color #fff
.revs-img
	border 1px dashed rgb(10, 25, 56);
	display block
	background-color #fff
	margin 0 auto
	height 100% !important
	min-height 170px !important
	object-fit: contain
	object-position: center
	width auto
.carousel-indicators
	position: static
	margin 10px auto 0
	li
		width 7px
		height 7px
		margin 0 5px
		background-color: #001236
		border: 1px solid #001236
		transition: all .5s ease
	.active
		width 7px
		height 7px
		margin 0 5px
		background-color: #FF6506
		border: 1px solid #FF6506
.carousel-control
	color #003C77
	background-color: transparent
	text-shadow: none
	font-size: 56px
	font-family: OSB
	top calc(50% - 24px)
	width 60px
	height 56px
	line-height 56px
	opacity 1
	transition: all .5s ease
	&:focus
		color #003C77
	&:hover
		color #FF6506
	&.left
	&.right
		background-image none
	&.left
		left 50px
	&.right
		right 50px

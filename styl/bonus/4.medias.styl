@media screen and (min-width 2295px)
	body
		font-size: 18px
	.container
		width 1400px
	#main
		padding 60px 0
	.video-wrapper-main
		max-width 860px
	#feedback
		min-height calc(100vh - 859px)
@media screen and (max-width 1199px)
	header
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
		display block
	.contacts
		float: none
		text-align: center
	.contact
		display: inline-block
		margin 5px 5px 0
		line-height: 17px
	#feedback
		padding 50px 0
@media screen and (max-width 991px)
	.white-container
		padding 20px
@media screen and (max-width 767px)
	#vk
		margin-bottom: 25px
@media screen and (max-width 560px)
	.general-title
		width 113%
		left -6.5%
	.remind-main-title
		margin-top: 20px
@media screen and (max-width 485px)
	header
		margin-bottom: 10px
	#logo
		width 160px
		height 14px
	.contact
		font-size: 12px
		line-height: 15px
		background-size: 15px
		padding-left: 18px
	.contact.contact-email
		background-size: 20px
		padding-left: 24px
	.pre
		font-size: 16px
	#main
		padding 10px 0 30px
	.main-title
		line-height: 1
		span
			font-size: 24px
			margin-bottom: 10px
	audio
		margin-bottom: 25px
	.remind-main-subtitle
		font-size: 22px
	.main-info
		font-size: 18px
	#feedback
		padding 30px 0
	.general-title
		font-size: 22px
		margin-bottom: 30px
		line-height: 1.3
	.general-title .span-main::before
		width: 42px;
		height: 42px;
		top: -31px;
		left: -23px;
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	.remind-main-title
		font-size: 24px
	.remind-main-subtitle
		font-size: 20px
@media screen and (max-width 385px)
	body
	.main-info
		font-size: 18px
	header
	footer
		padding 10px 0
	.main-title
		font-size: 20px
		span
			font-size: 24px
	.general-title
		width 120%
		left -10%
	#main
		padding 10px 0 30px
	audio
		margin-bottom:  20px
	#feedback
		padding 30px 0
	.remind-main-title
		font-size: 22px
		line-height: 1.3
		margin-top: 0
	.remind-main-subtitle
		font-size: 20px
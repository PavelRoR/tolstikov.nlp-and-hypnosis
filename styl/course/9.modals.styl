.modal-backdrop.in
	opacity .8
	background-color: #f5f5f5
.mail-modal-content
	background-repeat no-repeat
	background-position: center
	background-size: cover
	background-color: #667B8B
	color #fff
button.close
	position absolute
	width: 34px
	height 34px
	border-radius: 5px
	padding 3px 5px
	line-height: .5
	text-align: center
	font-size: 28px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		color: #F0F0F0
		background-color: #000
.modal-title
	color #fff
	width 86%
	font-size: 24px
	font-family: RO
	color #F0651B
	&:nth-of-type(2)
		margin-top: 20px
.modal-list
	margin: 15px 0 0 20px
	li
		margin-bottom: 10px
		padding-left: 16px
		&:last-child
			margin-bottom: 0
		&:before
			background-color #fff
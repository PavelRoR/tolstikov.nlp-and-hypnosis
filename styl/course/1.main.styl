#main
	padding 70px 0
	text-align: center
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center top -100px
	background-size: cover
.main-container
	border: 2px dashed #000
	padding 35px 25px
	position relative
	width 100%
	max-width 650px
	margin 0 auto
.pre
	font-size: 16px
	color #0c0b0c
.main-title
	font-size: 37px
	line-height: 37px
	font-family: RO
	color #fff
	text-transform: uppercase
	background-color: #FF6407
	padding 10px 10px 20px
	box-shadow: 0 3px 7px 2px rgba(#000,.3)
	margin 23px 0 33px
	position relative
	width: 120%
	left -10%
	small
		display block
		font-family: initial
		font-size: 18px
		text-transform: none
.main-info
	font-size: 18px
	color #0c0b0c
	font-family: OSB
	margin 15px 0 25px
	span
		font-family: RO
		display: inline-block
		font-size: 20px
		color #cf4b04
#nlp
	padding 30px 0
	overflow hidden
	.container
		padding 0
		width 100%
		max-width 1366px
		margin 0 auto
.parts
	margin-bottom: 45px
.part
	position relative
	width 100%
	max-width 720px
	border 1px dashed #0a1938
	padding 30px 30px 30px 60px
	float left
	margin-bottom: -10px
	&:nth-of-type(2n)
		padding 30px 60px 30px 30px
		float: right
	&-img
		position: absolute
		width 180px
		height auto
		top calc(50% - 90px)
		&-1
		&-3
		&-5
			right -420px
		&-2
		&-4
		&-6
			left -420px
	&-title
		font-size: 18px
		font-family: RO
		margin: 0 0 30px 40px
.button-plan
	margin-top: 40px
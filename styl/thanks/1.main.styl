#main
	padding 30px 0 50px
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center top -100px
	min-height calc(100vh - 213px)
	text-align: center
.pre
	font-size: 18px
.main-title
	font-size: 26px
	font-family: RO
	text-shadow: 0px 4px 20px rgba(114, 238, 255, 0.3);
	margin 10px 0 30px
	line-height: 36px
	span
		color: #cf4b04
		display: block
.main-subtitle
	font-size: 24px
	font-family: OSB
	margin-top: 40px
.main-container
	padding 30px
	width 100%
	max-width 600px
	margin 20px auto 0
	border: 2px dashed #000
.button-thanks
	margin: 60px auto 30px
.switch-date
	display: inline-block
	font-size: 26px
	font-family: OSB
	color #cf4b04
@import '../main/9.modal'
@import '../main/10.politics'
.inputrow
	// float left
	// margin-right: 30px
	display block
	width 100%
	max-width: 365px;
	margin 0 auto 10px
.intl-tel-input
	width 100%
.bots
	width 100%
	max-width 560px
	margin 20px auto 0
	text-align: center
	&-link
		display: inline-block
		width 25%
		color: #ffffff
		font-size: 14px
		padding 10px 5px
		transition: all .4s ease
		&-vk
			background-color: #4D75A3
		&-tg
			background-color: #11AADF
		&-fb
			background-color: #4267B2
		&-vb
			background-color: #7B58E8
		&-wa
			background-color: #0CB40C
		&-ok
			background-color: #FF9802
		&:focus
			text-decoration: none
			color #fff
		&:hover
			text-decoration: none
			color: #fff
			transform: translateY(-4px)
		.fa
			display block
			font-size: 24px
			margin-bottom: 2px
		img
			display: block;
			margin: 0 auto 4px;